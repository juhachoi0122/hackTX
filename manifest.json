{
    "manifest_version": 3,
    "name": "ChatGPT 10-Word Summary Extension",
    "version": "1.0",
    "description": "Generate 10-word summaries using ChatGPT within your browser.",
    "permissions": ["activeTab", "storage", "scripting"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "host_permissions": [
      "https://api.openai.com/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["openai.js"],
        "matches": ["https://*/*", "http://*/*"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "options_page": "options.html",

    "run_at": "document_end"
  
  }
  